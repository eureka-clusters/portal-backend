{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-attachment-for-mailing-%s")|format(mailing)) %}

<h1>{{ translate("txt-edit-attachment-for-mailing-%s")|format(mailing) }}</h1>

{% do form.prepare() %}

{{ form().openTag(form)|raw }}

{% if form.has('attachment') %}
    <fieldset>
        <legend>{{ translate("txt-current-attachment") }}</legend>
        {{ lbs5formelement(form.get('attachment')) }}
    </fieldset>
{% endif %}

<fieldset>
    <legend>{{ translate("txt-upload-attachment") }}</legend>

    {{ lbs5formelement(form.get('file')) }}
</fieldset>

{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ formelement(form.get('csrf')) }}
        {{ formelement(form.get('submit')) }}
        {{ formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
