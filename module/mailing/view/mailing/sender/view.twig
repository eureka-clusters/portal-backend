{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-view-sender")) %}

<h1>{{ sender }} {{ senderLink( sender,'edit','button') }}</h1>


<dl class="dl-horizontal">
    <dt>{{ translate("txt-name") }}</dt>
    <dd>{{ sender.sender }}</dd>
    <dt>{{ translate("txt-email") }}</dt>
    <dd>{{ sender.email }}</dd>
</dl>

<h2>{{ translate("txt-mailings") }}</h2>
<p>{{ translate("txt-sender-mailing-explanation") }}</p>

{% if sender.mailing.count() > 0 %}
    <table class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th>{{ translate("txt-mailing-id") }}</th>
            <th>{{ translate("txt-mailing-name") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for mailing in sender.mailing %}
            <tr>
                <td><small class="text-muted">{{ mailing.id }}</small></td>
                <td>{{ mailingLink(mailing,'view','mailing') }} {{ mailingLink(mailing,'edit','icon') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ lbs5alert().info(translate("txt-no-mailings-were-send-with-this-sender"))|raw }}
{% endif %}


<h2>{{ translate("txt-transactional-mails") }}</h2>
<p>{{ translate("txt-transactional-emails-explanation") }}</p>

{% if sender.transactional.count() > 0 %}
    <table class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th>{{ translate("txt-transactional-email-id") }}</th>
            <th>{{ translate("txt-transactional-email-name") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for transactional in sender.transactional %}
            <tr>
                <td><small class="text-muted">{{ transactional.id }}</small></td>
                <td>{{ transactionalLink(transactional,'view','name') }} {{ transactionalLink(transactional,'edit','icon') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ lbs5alert().info(translate("txt-no-transactional-emailings-were-send-with-this-sender"))|raw }}
{% endif %}

