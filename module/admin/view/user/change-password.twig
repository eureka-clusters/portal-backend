{% if identity().password %}
    <h1>{{ translate("txt-change-password") }}</h1>
    {% do headTitle().append(translate("txt-change-password")) %}
    <p>{{ translate("txt-change-password-explanation") }}</p>
{% else %}
    <h1>{{ translate("txt-set-password") }}</h1>
    {% do headTitle().append(translate("txt-set-password")) %}
    <p>{{ translate("txt-set-password-explanation") }}</p>
{% endif %}


{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{{ lbs5formelement(form.get('password')) }}
{{ lbs5formelement(form.get('passwordVerify')) }}


<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ formelement(form.get('csrf')) }}
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
