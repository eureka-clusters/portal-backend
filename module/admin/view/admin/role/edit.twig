{% do headTitle().append(translate("txt-admin") ) %}
{% do headTitle().append(translate("txt-edit-role-%s")|format(role)) %}

<h1>{{ translate("txt-edit-role-%s")|format(role) }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set roleForm = form.get('admin_entity_role') %}

{{ formelement(roleForm.get('id')) }}
{{ lbs5formelement(roleForm.get('description')) }}


<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ formelement(form.get('csrf')) }}
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ lbs5formelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
