{% do headTitle().append(translate("txt-admin") ) %}
{% do headTitle().append(translate("txt-new-oauth2-client-title")) %}

<h1>{{ translate("txt-new-oauth2-client-title") }}</h1>
<p>{{ translate("txt-new-oauth2-client-explanation") }}</p>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{{ lbs5formelement(form.get('name')) }}
{{ lbs5formelement(form.get('description')) }}
{{ lbs5formelement(form.get('redirectUri')) }}
{{ lbs5formelement(form.get('scope')) }}
{{ lbs5formelement(form.get('grantTypes')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ formelement(form.get('csrf')) }}
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
